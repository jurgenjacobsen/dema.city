<%- include('blocks/head') %>

<style>
    .navbar {
        display: none;
    }
</style>

<body>
    <div class="container">
        <div class="login">
            <div class="container" id="container">
                <div class="form-container sign-up-container">
                    <form action="/">
                        <h1>Create Account</h1>
                        <div class="social-container">
                            <a href="/login/discord?signup=true" class="social"><box-icon type='logo' color='white' name='discord-alt'></box-icon></a>
                            <a href="/login/twitter?signup=true" class="social"><box-icon type='logo' color='white' name='twitter'></box-icon></a>
                        </div>
                    </form>
                </div>
                <div class="form-container sign-in-container">
                    <form action="#">
                        <h1>Sign in</h1>
                        <div class="social-container">
                            <a href="/login/discord" class="social"><box-icon type='logo' color='white' name='discord-alt'></box-icon></a>
                            <a href="/login/twitter" class="social"><box-icon type='logo' color='white' name='twitter'></box-icon></a>
                        </div>
                    </form>
                </div>
                <div class="overlay-container">
                    <div class="overlay">
                        <div class="overlay-panel overlay-left">
                            <h1>Welcome Back!</h1>
                            <p>To keep connected with us please login with your favorite platform</p>
                            <button class="ghost" id="signIn">Sign In</button>
                        </div>
                        <div class="overlay-panel overlay-right">
                            <h1>Hello, Friend!</h1>
                            <p>Start your journey with us using your favorite platform</p>
                            <button class="ghost" id="signUp">Sign Up</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="snackbar"><%= err?.message %></div>
    </div>
</body>