<!DOCTYPE html>
<html translate="no">
  <head>
    <title>Dema Documentation</title>

    <meta charset="UTF-8">
    <meta translate="no">
    <meta name="google" content="notranslate">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="<%= cdn %>/images/favicon.ico">
    <link rel="stylesheet" href="<%= cdn %>/styles/css/docs.css">

    <meta name="theme-color" content="#1c1c1c">
    <meta property=”og:type” content=”website”/>
    <meta property="og:title" content="Dema Documentation">
    <meta property="og:url" content="https://docs.dema.city">
    <meta property="og:description" content="Dema City Documentation is where you can find your favorite project's documentations.">
    <meta property="og:image" content="<%= cdn %>/images/logo.png">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://twemoji.maxcdn.com/v/latest/twemoji.min.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/boxicons@2.0.9/dist/boxicons.js"></script>
  </head>
  <body class="noselect">
    <div class="container head-docs" id="head">
      <div class="head">
        <h1>Dema Documentation</h1>
        <div class="description-box">
          <p>
            The place to find your favorite projects documentations
          </p>
        </div>
        <div class="arrow-box" id="scroll-arrow">
          <a href="#docs"><box-icon name='down-arrow-alt' color='white'></box-icon></a>
        </div>
      </div>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
      <path fill="#292929" fill-opacity="1" d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
    </svg>
    <div class="main-docs" id="docs">
      <div class="container">
        <div class="">

        </div>
        <div class="documents">
          <% documentations.forEach((doc) => { %>
            <div class="column" onclick="window.location.href='/<%= doc %>'">
              <h2><%= doc %></h2>
            </div>
          <% }); %>
        </div>
        <br>
      </div>
      <div class="footer">
        <p>
          Made with ❤️ by Jürgen
        </p>
      </div>
    </div>
    <br>
  </body>
</html>

<script>
  window.onload = () => {
    twemoji.parse(document.body);
  };

  function ResizeHead() {
    let height = $(window).height();
    if(height > 438) {
      $('#head').height(height - 150);
    } else if(height > 250) {
      $('#head').height(height);
    } else {
      $('#head').height(height + 200);
    }
    $('#docs').css('top', $(window).height() - 300)
  };

  $(function () {
    $(window).scroll(function () {
      if($(this).scrollTop() < ($(window).height() - 500)) {
        $('#scroll-arrow').fadeIn();
      } else {
        $('#scroll-arrow').fadeOut();
      }
    });
  });

  ResizeHead();
  window.addEventListener('resize', ResizeHead);
</script>